@{
    Layout = null;
    ViewData["Title"] = "Register - Smart Service Hub";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: url('/images/bike-bg.jpg') no-repeat center center/cover;
            font-family: 'Poppins', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
        }

        .register-card {
            z-index: 1;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            border-radius: 20px;
            padding: 40px;
            width: 420px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.4);
            color: #fff;
            animation: fadeUp 1s ease-in-out;
        }

        @@keyframes fadeUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .register-card h3 {
            text-align: center;
            font-weight: 700;
            margin-bottom: 25px;
            color: #ffb347;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: #fff;
            height: 45px;
            border-radius: 10px;
        }

            .form-control::placeholder {
                color: #eee;
            }

        .btn-gradient {
            background: linear-gradient(90deg, #ff7a00, #0b5ed7);
            border: none;
            border-radius: 10px;
            height: 45px;
            color: #fff;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-gradient:hover {
                opacity: 0.9;
                transform: scale(1.03);
            }

        .alert-danger {
            background: rgba(255, 50, 50, 0.85);
            border: none;
            border-radius: 10px;
            color: #fff;
        }

        a {
            color: #ffb347;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <div class="overlay"></div>

    <div class="register-card">
        <h3>Create Your Account 🚘</h3>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>⚠️ @error.ErrorMessage</div>
                }
            </div>
        }

        <form method="post" asp-action="Register">
            <div class="mb-3">
                <input name="fullname" class="form-control" placeholder="Full Name" required />
            </div>
            <div class="mb-3">
                <input name="email" type="email" class="form-control" placeholder="Email Address" required />
            </div>
            <div class="mb-3">
                <input name="phone" class="form-control" placeholder="Phone Number" required />
            </div>
            <div class="mb-3">
                <input name="password" type="password" class="form-control" placeholder="Password" required />
            </div>
            <button type="submit" class="btn-gradient w-100">Register</button>
            <p class="mt-4 text-center">
                Already have an account?
                <a href="/Account/Login">Login</a>
            </p>
        </form>
    </div>
</body>
</html>
