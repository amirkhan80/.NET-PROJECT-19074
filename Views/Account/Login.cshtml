@{
    Layout = null; // 👈 Layout disabled (no SmartServiceHub header/footer)
    ViewData["Title"] = "Login - Smart Service Hub";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: url('/images/bike-bg.jpg') no-repeat center center/cover;
            font-family: 'Poppins', sans-serif;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            z-index: 0;
        }

        .login-card {
            position: relative;
            z-index: 1;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            border-radius: 20px;
            padding: 40px;
            width: 400px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.4);
            color: #fff;
            animation: fadeUp 1s ease-in-out;
        }

        @@keyframes fadeUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .login-card h3 {
            text-align: center;
            font-weight: 700;
            margin-bottom: 25px;
            color: #ffb347;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: #fff;
            height: 45px;
            border-radius: 10px;
        }

            .form-control::placeholder {
                color: #eee;
            }

        .btn-gradient {
            background: linear-gradient(90deg, #ff7a00, #0b5ed7);
            border: none;
            border-radius: 10px;
            height: 45px;
            color: #fff;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-gradient:hover {
                opacity: 0.9;
                transform: scale(1.03);
            }

        a {
            color: #ffb347;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <div class="overlay"></div>

    <div class="login-card">
        <h3>Welcome Back 👋</h3>
        <form method="post" asp-action="Login">
            <div class="mb-3">
                <input name="email" type="email" class="form-control" placeholder="Email Address" required />
            </div>
            <div class="mb-3">
                <input name="password" type="password" class="form-control" placeholder="Password" required />
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <button type="submit" class="btn-gradient w-100">Login</button>

            <p class="mt-4 text-center">
                Don't have an account?
                <a href="/Account/Register">Register</a>
            </p>
        </form>
    </div>
</body>
</html>
