@model IEnumerable<SmartServiceHub.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<h2 class="text-center mt-3">🧾 My Bookings</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success text-center">@TempData["Message"]</div>
}

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Service Date</th>
            <th>Status</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.ServiceDate.ToLocalTime()</td>
                <td>@b.Status</td>
                <td>₹@b.EstimatedAmount</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" href="/Booking/Details/@b.Id">Details</a>
                    <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirmDelete();">
                        <input type="hidden" name="id" value="@b.Id" />
                        <button type="submit" class="btn btn-sm btn-danger ms-2">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmDelete() {
        return confirm("🗑️ Are you sure you want to delete this booking?");
    }
</script>
