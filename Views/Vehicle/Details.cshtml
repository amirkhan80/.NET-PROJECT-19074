@model SmartServiceHub.Models.Vehicle
@{
    ViewData["Title"] = "Vehicle Details";
}

<div class="container mt-5">
    <div class="card shadow p-4 mx-auto" style="max-width:600px;">
        <h3 class="text-center mb-3">Vehicle Details</h3>
        <p><strong>Type:</strong> @Model.Type</p>
        <p><strong>Make & Model:</strong> @Model.MakeModel</p>
        <p><strong>Registration:</strong> @Model.RegistrationNumber</p>

        @if (!string.IsNullOrEmpty(Model.PhotoUrl))
        {
            <div class="text-center mb-3">
                <img src="@Model.PhotoUrl"
                     alt="Vehicle Image"
                     class="img-fluid rounded border"
                     style="max-height:300px;" />
            </div>
        }
        else
        {
            <div class="text-center text-danger">
                <p>No image uploaded</p>
            </div>
        }


        <table class="table table-bordered">
            <tr><th>Type</th><td>@Model.Type</td></tr>
            <tr><th>Make & Model</th><td>@Model.MakeModel</td></tr>
            <tr><th>Registration No.</th><td>@Model.RegistrationNumber</td></tr>
            <tr><th>Created On</th><td>@Model.CreatedAt.ToLocalTime()</td></tr>
        </table>

        <div class="text-center mt-3">
            <a href="/Vehicle/List" class="btn btn-outline-primary">← Back to My Vehicles</a>
        </div>
    </div>
</div>
