@{
    ViewData["Title"] = "Add Vehicle";
}

<div class="container mt-4">
    <h2>Add Vehicle</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label>Vehicle Type</label>
            <input type="text" name="type" class="form-control" required placeholder="Car, Bike, Scooter" />
        </div>

        <div class="mb-3">
            <label>Make & Model</label>
            <input type="text" name="makeModel" class="form-control" required placeholder="Honda City, Pulsar 150" />
        </div>

        <div class="mb-3">
            <label>Registration Number</label>
            <input type="text" name="regNumber" class="form-control" required placeholder="MH-02-AB-1234" />
        </div>

        <div class="mb-3">
            <label>Upload Photo (Optional)</label>
            <input type="file" name="photo" class="form-control" />
        </div>

        <button class="btn btn-primary">Save Vehicle</button>
    </form>
</div>
